<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Tam Ekran Åžeffaf Arka Plan -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_image"
        android:alpha="0.7"
        android:contentDescription="Background Image" />

    <!-- Ãœst KÄ±sÄ±m (Beyaz Bar) -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="28dp"
            android:layout_height="40dp"
            android:contentDescription="Menu Icon"
            android:src="@drawable/ic_menu" />

        <TextView
            android:id="@+id/pagesText"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="PAGES"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="49dp"
            android:layout_height="42dp"
            android:layout_marginEnd="0dp">

            <!-- Trolley Icon -->

            <!-- Badge (Red Circle with Number) -->
            <ImageView
                android:id="@+id/TrolleyIcon"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="100dp"
                android:contentDescription="Cart Icon"
                android:src="@drawable/trolley" />

            <TextView
                android:id="@+id/cartBadge"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="end|top"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/red_circle"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </FrameLayout>


    </LinearLayout>




    <androidx.cardview.widget.CardView
        android:id="@+id/transparentWhiteBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@android:color/white"
        android:alpha="0.85"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- CookBooks BaÅŸlÄ±k ve SaÄŸ Ä°konlar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cookBooksTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This weeks favorite!"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Yemek Resmi -->
            <ImageView
                android:id="@+id/foodImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_food_image1"
                android:contentDescription="Food Image" />

            <!-- Tomato Stop BaÅŸlÄ±ÄŸÄ± -->
            <TextView
                android:id="@+id/tomatoStopTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tomato Soup"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Rastgele YazÄ± -->
            <TextView
                android:id="@+id/randomText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Start by heating a tablespoon of olive oil in a large pot over medium heat. Add a chopped onion and two minced garlic cloves, cooking until softened. Stir in two tablespoons of tomato paste and cook for another minute. Add four cups of chopped tomatoes (canned or fresh), a cup of vegetable broth, and a teaspoon of sugar to balance the acidity. Season with salt, pepper, and a pinch of dried basil or oregano. Simmer for 20-25 minutes, stirring occasionally. Use an immersion blender to purÃ©e the soup until smooth. Serve hot, garnished with fresh basil leaves and a drizzle of cream or olive oil for extra richness. Enjoy your delicious homemade tomato soup! ðŸ…ðŸ²"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>

