<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hover Durumu (Cursor veya Tıklama) -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#A9A9A9" /> <!-- Koyu Gri -->
        </shape>
    </item>
    <!-- Normal Durum -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#D3D3D3" /> <!-- Açık Gri -->
        </shape>
    </item>
</selector>
